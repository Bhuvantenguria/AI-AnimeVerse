# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mangaverse"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3000

# API Services
JIKAN_API_URL="https://api.jikan.moe/v4"
MANGADEX_API_URL="https://api.mangadx.org"

# AI Services (Optional - for chat and advanced features)
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Text-to-Speech (Optional - for audio narration)
ELEVENLABS_API_KEY="your-elevenlabs-api-key-here"

# Cloudinary (Optional - for media storage)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Redis (Optional - for job queue and caching)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Email (Optional - for notifications)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# WebSocket (Optional - for real-time features)
WEBSOCKET_ENABLED=true

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR="uploads"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000 